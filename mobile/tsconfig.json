{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2019"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@pff/*": ["src/pff/*"],
      "@vitalization/*": ["src/vitalization/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "App.tsx", "index.js"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "src/**/__tests__/**"]
}
